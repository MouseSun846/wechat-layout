{
  "name": "markdown-to-wechat-editor",
  "version": "1.0.0",
  "description": "A Chrome extension to convert Markdown text to WeChat public account rich text format with Mermaid chart support",
  "main": "background.js",
  "scripts": {
    "build": "webpack --mode production && webpack --config webpack.mermaid.config.js --mode production",
    "dev": "webpack --mode development --watch",
    "start": "http-server . -p 8080",
    "lint": "eslint . --ext .js --config eslint.config.mjs",
    "prepare": "npm run build && npm run lint",
    "build-mermaid": "webpack --config webpack.mermaid.config.js --mode production"
  },
  "keywords": [
    "chrome-extension",
    "markdown",
    "wechat",
    "mermaid"
  ],
  "author": "Developer",
  "license": "MIT",
  "homepage": "https://github.com/MouseSun846/wechat-layout.#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/MouseSun846/wechat-layout..git"
  },
  "bugs": {
    "url": "https://github.com/MouseSun846/wechat-layout./issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/your-username"
  },
  "dependencies": {
    "@fingerprintjs/fingerprintjs": "^4.6.2",
    "canvg": "^4.0.3",
    "marked": "^0.7.0",
    "md2wechat": "file:../md2wechat"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "eslint": "^9.33.0",
    "http-server": "^14.1.1",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1"
  },
  "files": [
    "dist/",
    "manifest.json",
    "popup.html",
    "styles.css",
    "mermaid.min.js",
    "node_modules/marked/lib/marked.js"
  ]
}
